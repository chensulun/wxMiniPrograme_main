/* pages/rwdcx/rwdcx.wxss */
page {
  height: 100%;
  background-color: #EDEDED;
}
.rwdcx-header {
  height: 46px;
  background-color: #fff;
  margin-bottom: 6px;
  border-top: 1px solid #f5f5f5;
}
.header-item {
  width: 33.33%;
  height: 100%;
  line-height: 46px;
  text-align: center;
  float: left;
  box-sizing: border-box;
}
.rwdcx-content {
  padding: 0 20px;
  background-color: #fff;
}
.content-item {
  height: 47px;
  line-height: 47px;
  border-bottom: 1px solid #f5f5f5;
}
.item-td {
  display: inline-block;
  height: 100%;
  text-align: center;
  font-size:15px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(97,97,97,1);
  vertical-align: middle;
  padding: 0 4px;
  box-sizing: border-box;
}
.item-zhandian {width: 23%;}
.item-type {width: 30%;}
.item-time {width: 25%;}
.item-btn {width: 22%;}
.text-green {
  font-size: 15px;
  color: #096020;
  line-height: 24px;
}
.text-red {
  color: #DE0B0B;
}
.select-icon {
  display: inline-block;
  width: 13px;
  height: 6px;
}
.select-icon image {
  width: 100%;
  height: 100%;
}
.select-time-container {
  width: 100%;
  display: none;
  height: calc(100% - 58px);
  background-color: rgba(0,0,0,0.2);
  position: fixed;
  top: 56px;
  left: 0;
  transition: all 0.5s;
}
.select-time-show {
  display: inline-block;
}
.select-time-content {
  width: calc(100% - 20px);
  height: 132px;
  margin:  2px auto;
  background-color: #fff;
  border-radius: 8px;
}
.begin-time, .end-time {
  height: 45px;
  line-height: 45px;
  text-align: center;
  border-bottom: 1px solid #EDEDED;
  font-size: 13px;
  color: #3C3C3C;
}
.select-time {
  display: inline-block;
  border: 1px solid #EDEDED;
  font-size: 12px;
  width: 140px;
  height: 22px;
  padding: 2px 15px;
  border-radius: 11px;
  margin-left: 14px;
  box-sizing: border-box;
  vertical-align: middle;
  text-align: left;
}
.btns-container {
  text-align: center;
  padding: 5px;
}
.btns-container button {
  display: inline-block;
}
.btn-look {
  width: 55px;
  height: 25px;
  background-color: #E6F8EB;
  line-height: 25px;
  text-align: center;
  font-size:13px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(92,209,126,1);
  margin-top: 11px;
}
