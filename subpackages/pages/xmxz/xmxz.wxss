/* pages/xzrwd/xzrwd.wxss */
page {
  height: 100%;
  background-color: #EDEDED;
}
.xzrw-container {
  padding: 8px 10px;
}
.xzrw-title {
  height: 40px;
  background-color: #fff;
  border-radius: 20px;
}
.title-item {
  width: 50%;
  border-radius: 20px;
  text-align: center;
  font-size: 15px;
  line-height: 40px;
  color: #6F6A6A;
  float: left;
}
.title-item.active {
  background-color: #26C44F;
  color: #fff;
}
.cells-item {
  border-radius: 8px;
  overflow: hidden;
  margin-top: 8px;
}
.map-container {
  padding: 14px 20px;
}
.map-btns {
  text-align: right;
  margin-top: 10px;
  position: relative;
}
.map-search {
  display: inline-block;
  width: calc(100% - 120px);
  height: 28px;
  line-height: 28px;
  padding: 0 10px;
  font-size: 12px;
  float: left;
  text-align: left;
  border: 1px solid #eee;
  box-sizing: border-box;
  border-radius: 4px;
}
.result-container {
  width: calc(100% - 120px);
  border: 1px solid #eee;
  position: absolute;
  top: 28px;
  left: 0;
  z-index: 9;
  background-color: #fff;
  text-align: left;
  max-height: 200px;
  overflow-y: auto;
}
.result-container .result-item {
  padding: 4px 10px;
}
.result-container .item-title {
  font-size: 12px;
  color: #000;
}
.result-container .item-details {
  font-size: 10px;
  color: #666;
}
.view-center {
  display: block;
}
.hidden {
  display: none;
}
#map {
  height: 146px;
  border: 1px solid #CDCDCD;
  margin-bottom: 8px;
  width: 100%;
}
.map-tips {
  font-size: 10px;
  color: #989595;
  text-align: right;
}
.table-cell {
  padding: 14px 22px 20px;
}
.table-container {
  margin-top: 10px;
}
.th, .tr, .td {
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
}
.th {
  background-color: #EDF1FC;
}
.tr {
  border: 1px solid #EDEDED;
  border-top: none; 
}
.th:after, .tr:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.td {
  text-align: center;
  float: left;
  color: #696767;
  font-size: 13px;
}
.th .td:first-child,
.tr .td:first-child {
  width: 50%;
}
.th .td:nth-child(2),
.tr .td:nth-child(2) {
  width: 40%;
}
.th .td:last-child,
.tr .td:last-child {
  width: 10%;
}
.td .weui-input {
  height: 100%;
  width: 100%;
  font-size: 12px;
}
.xzxm .weui-cell__hd {
  min-width: 80px;
}
