/* pages/hjjc/hjjc.wxss */
page{ 
  background-color: rgba(240, 240, 240, 1);
}
.hjjc-header {
  height: 48px;
  background-color: #fff;
  color: rgba(124, 124, 124, 1);
}
.header-item {
  width: 50%;
  height: 100%;
  line-height: 55px;
  text-align: center;
  float: left;
  box-sizing: border-box;
}
.select-icon {
  display: inline-block;
  width: 13px;
  height: 6px;
}
.select-icon image {
  width: 100%;
  height: 100%;
}
.data-container {
  padding: 10px;
  background-color: rgba(240, 240, 240, 1);
}
.data-content {
  background-color: #fff;
  padding: 16px;
}
.data-row {
  margin-bottom: 10px;
  font-size: 0;
}
.data-row:last-child {
  margin-bottom: 0;
}
.data-row-item {
  display: inline-block;
  font-size: 13px;
  border: 1px solid rgba(243, 243, 243, 1);
  border-radius: 4px;
  width: calc((100% - 10px) / 2);
  height: 40px;
  line-height: 16px;
  padding: 12px 15px;
  box-sizing: border-box;
}
.data-row-item > view {
  display: inline-block;
  vertical-align: top;
}
.item-img {
  width: 16px;
  height: 16px;
  overflow: hidden;
}
.item-img image {
  width: 100%;
  height: 100%;
}
.mr-10 {
  margin-right: 10px;
}
.mr-16 {
  margin-right: 16px;
}
.text-red {
  color: rgba(222, 16, 16, 1);
}
.text-blue {
  color: rgba(44, 172, 255, 1);
}
.text-green {
  color: rgba(26, 185, 155, 1);
}
.text-orange {
  color: rgba(255, 140, 10, 1);
}
.echarts-container {
  height: 303px;
  padding: 0px 10px 16px;
  background-color: rgba(240, 240, 240, 1);
  box-sizing: border-box;
}
.echarts-title {
  height: 52px;
  padding: 20px 20px 12px;
  background-color: #fff;
  font-size: 14px;
  line-height: 20px;
  color: rgba(26, 185, 155, 1);
  box-sizing: border-box;
}
#echarts {
  height: 238px;
  background:rgba(255,255,255,1);
  border-radius:3px;
}