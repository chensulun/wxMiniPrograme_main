/* pages/rwpc/rwpc.wxss */

.page-rwdgl image {
    width: 100%;
}

.page-rwdgl {
    box-sizing: border-box;
    min-height: 100vh;
    background: #ededed;
}

.rwdgl-top {
    height: 110px;
    box-shadow: 0px 2px 1px 0px rgba(177, 176, 176, 0.16);
    border-top: 1px solid #ededed;
    background: #fff;
}

.rwdgl-add {
    height: 100%;
    box-sizing: border-box;
    text-align: center;
    padding-top: 10px;
}

.rwd-add-icon {
    width: 24%;
    height: 66px;
    display: inline-block;
    vertical-align: -10px;
}

.rwd-add-text {
    display: inline-block;
}

.rwd-title {
    text-align: center;
    font-size: 20px;
    color: #191919;
}

.rwd-subtitle {
    text-align: center;
    font-size: 12px;
    color: #919090;
}


/* 任务单供应量排行榜 */

.content-title {
    line-height: 30px;
    padding: 0 14px;
    font-size: 15px;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(25, 25, 25, 1);
}

.content-item {
    border-bottom: 1px solid #ededed;
    padding: 12px 20px 12px 14px;
    color: #323232;
}

.content-item-top {
    font-size: 13px;
}

.content-item-middle {
    font-size: 14px;
}

.content-item-bottom {
    font-size: 12px;
    color: #242424;
}

.rwdcx-header {
    border-top: 5px solid #ededed;
    height: 55px;
    border-bottom: 1px solid #ededed;
    font-size: 24rpx;
    background: #fff;
}

.header-cboxitem {
    width: 20%;
    height: 100%;
    line-height: 55px;
    text-align: center;
    float: left;
    box-sizing: border-box;
}

.allSelect_box {
    line-height: 90rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.checkbox {
    transform: scale(0.7, 0.7);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    color: #fff;
    background: #6669e3;
    border-color: #6669e3;
}

.allSelect {
    margin-left: 15rpx;
    vertical-align: middle;
}

.member_box .checkbox {
    margin-top: 15rpx;
}

.member_box {
    padding-bottom: 30rpx;
    display: flex;
    border-bottom: 2rpx solid #ebebeb;
    padding: 20rpx 0 20rpx 0;
}

.header-item {
    width: 50%;
    height: 100%;
    line-height: 55px;
    text-align: center;
    float: left;
    box-sizing: border-box;
    font-size: 24rpx;
}

.select-icon {
    display: inline-block;
    width: 13px;
    height: 6px;
}

.select-icon image {
    width: 100%;
    height: 100%;
}

.list-item {
    border-bottom: 1px solid #ededed;
    padding: 20rpx 20rpx 20rpx 20rpx;
    position: relative;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.item-index {
    font-size: 13px;
    min-width: 18px;
    text-align: center;
    box-sizing: border-box;
    position: absolute;
    top: 30px;
    left: 20px;
    padding: 2px 6px;
    background-color: #dbd8d8;
}

.item-top {
    font-size: 13px;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(50, 50, 50, 1);
}

.item-middle {
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(50, 50, 50, 1);
    /* line-height: 36px; */
}

.item-bottom {
    font-size: 10px;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(201, 21, 21, 1);
    line-height: 20px;
}

.info {
    position: relative;
    font-size: 24rpx !important;
    border-bottom: 1px solid #dedede;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.info .checkbox {
    position: absolute;
    left: -70rpx;
}

.info .status {
    position: absolute;
    right: 0;
    width: initial;
    font-size: 22rpx;
}


.info .item-middle .pull-left {
    font-size: 24rpx;
    margin-right: 20rpx;
}

.bottom_opt {
    display: flex;
    justify-content: flex-end;
    width: 100%;
}

.bottom_opt button {
    margin: 0;
    padding: 0;
    width: 150rpx;
    height: 60rpx;
    border-radius: 60rpx;
    margin-right: 20rpx;
    box-shadow: none;
}

.list-container {
    box-sizing: border-box;
    padding: 20rpx;
}

.del {
    border: 2rpx solid #dedede;
    background: none;
}

.add {
    background-image: linear-gradient(to right, #6cd58c, #25c34e);
    color: #fff;
}

.time {
    font-size: 24rpx;
}

.sel_task {
    width: 100%;
    background: #fff;
    padding: 8rpx 0;
    border-radius: 15rpx;
    text-align: center;
    font-size: 45rpx;
    line-height: 43rpx;
    color:#32c858;
}

.sel_task::after {
    display: none;
}

.all_task {
    width: 100%;
    background: #fff;
    background-image: linear-gradient(to right, #6cd58c, #25c34e);
    color: #fff;
    padding: 40rpx 0;
    border-radius: 80rpx;
    width:5.5rem;
    margin-left: 24rpx;
}

.all_task::after {
    display: none;
}
.select-time-container {
    width: 100%;
    display: none;
    height: calc(100% - 58px);
    background-color: rgba(0, 0, 0, 0.2);
    position: fixed;
    top: 56px;
    left: 0;
    transition: all 0.5s;
}

.select-time-show {
    display: inline-block;
}

.select-time-content {
    width: calc(100% - 20px);
    height: 132px;
    margin: 2px auto;
    background-color: #fff;
    border-radius: 8px;
    position: relative;
    top: 234rpx;
}

.begin-time,
.end-time {
    height: 45px;
    line-height: 45px;
    text-align: center;
    border-bottom: 1px solid #EDEDED;
    font-size: 13px;
    color: #3C3C3C;
}

.select-time {
    display: inline-block;
    border: 1px solid #EDEDED;
    font-size: 12px;
    width: 200px;
    height: 22px;
    padding: 2px 15px;
    border-radius: 11px;
    margin-left: 14px;
    box-sizing: border-box;
    vertical-align: middle;
    text-align: left;
}

.btns-container {
    text-align: center;
    padding: 5px;
}

.btns-container button {
    display: inline-block;
}
